<div>
    <div onclick="menuClick()" class="flex items-center justify-center h-12 w-12 cursor-pointer rounded-xl hover:bg-gray-200">
        <div class="text-gray-700 w-5">
            <%- include ('../../../../public/icons/bars.svg') %>
        </div>
    </div>

    <div id="menu" class="transform -translate-x-full transition-all duration-700 fixed top-0 left-0 z-10">
        <div class="flex flex-col w-72 h-screen gap-6 pb-4 bg-gray-700">
            <div class="flex flex-col flex-grow">
                <div onclick="menuClick()" class="flex items-center justify-center h-12 w-12 cursor-pointer rounded-xl text-gray-100 hover:text-gray-700 hover:bg-gray-300 self-end my-4 mx-4">
                    <div class="w-5">
                        <%- include ('../../../../public/icons/bars.svg') %>
                    </div>
                </div>
                <%- include('menu_field.ejs', {icon: 'home.svg', title: 'Home', link: 'home'}) %>
                <% if (logged) { %>
                    <%- include('menu_field.ejs', {icon: 'projects.svg', title: 'Projects', link: 'projects'}) %>
                    <%- include('menu_field.ejs', {icon: 'waiting.svg', title: 'Waiting', link: 'waiting'}) %>
                    <%- include('menu_field.ejs', {icon: 'history.svg', title: 'History', link: 'history'}) %>
                <% } %>
                <%- include('menu_field.ejs', {icon: 'queue.svg', title: 'Queue', link: 'queue'}) %>
                <%- include('menu_field.ejs', {icon: 'help.svg', title: 'Help', link: 'help'}) %>
                <%- include('menu_field.ejs', {icon: 'contact.svg', title: 'Contact', link: 'contact'}) %>
                <div class="flex-grow"></div>
            </div>
        </div>
    </div>
</div>

<script>

    const menuBar = document.getElementById('menu')

    const menuClick = () => {
        menuBar.classList.toggle('-translate-x-full')
    }

</script>

