<div class="flex flex-row justify-between items-center p-4 bg-white bg-opacity-50 shadow-lg">
    <div class="absolute right-4 top-4 flex flex-col gap-2 z-10 items-end ">
        <% if (successes) { successes.forEach(text => { %>
        <div onclick="deleteToast(this)" class="transform transition-all duration-500 opacity-100 shadow-gray-300 divide-x-2 divide-gray-100 shadow-md flex flex-row bg-white rounded-xl text-gray-500 px-4 py-2 gap-2 items-center">
            <div class="w-8 text-green-500 flex-shrink-0">
                <%- include ('../../../../public/icons/check.svg') %>
            </div>
            <p class="pl-3 text-gray-500 cursor-default max-w-5xl"><%= text %></p>
        </div>

        <% })} %>
        <% if (errors) { errors.forEach((text, id) => { %>
        <div onclick="deleteToast(this)" class="transform transition-all duration-500 opacity-100 shadow-gray-300 divide-x-2 divide-gray-100 shadow-md flex flex-row bg-white rounded-xl text-gray-500 px-4 py-2 gap-2 items-center">
            <div class="w-6 m-1 text-red-500 flex-shrink-0">
                <%- include ('../../../../public/icons/cross2.svg') %>
            </div>
            <p class="pl-3 text-gray-500 cursor-default max-w-5xl"><%= text %></p>
        </div>
        <% })} %>
    </div>
    
    <!-- left side bar -->
    <%- include('menu.ejs') %>
    <!-- logo and name -->
    <a href="/" class="flex flex-row items-center gap-3">
        <div class="text-gray-700 w-10">
            <%- include (`../../../../public/icons/logo.svg`) %>
        </div>
        <p class="hidden sm:block font-quicksand font-bold text-4xl text-orange-500">ProProtein</p>
    </a>
    <div class="flex flex-row gap-4">
        <a id="register" href="register" class="bg-purple-500 px-6 py-2 text-white rounded-xl flex items-center font-bold hover:bg-purple-600">
            <p>Create account</p>
        </a>
        <!-- right account menu box -->
        <%- include('account_menu.ejs') %>
    </div>
</div>
<script>
    const deleteToast = ob => {
        ob.classList.toggle('opacity-0');
        setTimeout(() => ob.remove(), 500)
    }
</script>
