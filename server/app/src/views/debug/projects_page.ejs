<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Debug Page</title>
    <link rel="stylesheet" type="text/css" href="/css/styles.css">
</head>
<body class="flex flex-row p-10 gap-20">

    <div class="flex flex-col gap-10">
        <p class="text-xl">Normal Files</p>
        <form action="/debug/upload" method="post" enctype="multipart/form-data" class="flex flex-col gap-2">
            <select name="id">
                <% projects.forEach(project => { %>
                    <option value="<%= project._id %>"><%= project.name %> - <%= project._id %></option>
                <% }) %>
            </select>
            <select name="file_type">
                <option value="structure">structure</option>
                <option value="energy_min">energy_min</option>
                <option value="MD_simulation">MD_simulation</option>
                <option value="trajectory">trajectory</option>
                <option value="residues_indexes">residues_indexes</option>
            </select>
            <input type="file" name="file">
            <button type="submit" class="bg-coolgray-500 hover:bg-coolgray-600 text-white px-2 py-1 rounded-md">Upload File</button>
        </form>

        <form action="/debug/delete" method="post" class="flex flex-col gap-2">
            <select name="id">
                <% projects.forEach(project => { %>
                    <option value="<%= project._id %>"><%= project.name %> - <%= project._id %></option>
                <% }) %>
            </select>
            <select name="file_type">
                <option value="structure">structure</option>
                <option value="energy_min">energy_min</option>
                <option value="MD_simulation">MD_simulation</option>
                <option value="trajectory">trajectory</option>
                <option value="residues_indexes">residues_indexes</option>
            </select>
            <button type="submit" class="bg-coolgray-500 hover:bg-coolgray-600 text-white px-2 py-1 rounded-md">Delete File</button>
        </form>
    </div>

    <div class="flex flex-col gap-10">
        <p class="text-xl">Normal Files (Demo)</p>
        <form action="/debug/upload_demo" method="post" enctype="multipart/form-data" class="flex flex-col gap-2">
            <input type="file" name="file">
            <button type="submit" class="bg-coolgray-500 hover:bg-coolgray-600 text-white px-2 py-1 rounded-md">Upload Demo File</button>
        </form>

        <form action="/debug/delete_demo" method="post" class="flex flex-col gap-2">

            <select name="id">
                <% demos.forEach(demo => { %>
                    <option value="<%= demo._id %>"><%= demo.filename %> - <%= demo._id %></option>
                <% }) %>
            </select>
            <button type="submit" class="bg-coolgray-500 hover:bg-coolgray-600 text-white px-2 py-1 rounded-md">Delete Demo File</button>
        </form>
    </div>

    <div class="flex flex-col gap-10">
        <p class="text-xl">Template Files and Parameters</p>
        <form action="/debug/upload_template" method="post" enctype="multipart/form-data" class="flex flex-col gap-2">
            <select name="file_type">
                <option value="energy_min">energy_min</option>
                <option value="MD_simulation">MD_simulation</option>
                <option value="pdb2gmx_params">pdb2gmx_params</option>
                <option value="traj_params">traj_params</option>
                <option value="genion_params">genion_params</option>
            </select>
            <span class="text-coolgray-500">Format: number,number,number</span>
            <input type="text" name="content" class="border-2 border-coolgray-200">
            <input type="file" name="file">
            <button type="submit" class="bg-coolgray-500 hover:bg-coolgray-600 text-white px-2 py-1 rounded-md">Upload</button>
        </form>

        <form action="/debug/delete_template" method="post" class="flex flex-col gap-2">
            <select name="file_type">
                <option value="energy_min">energy_min</option>
                <option value="MD_simulation">MD_simulation</option>
                <option value="pdb2gmx_params">pdb2gmx_params</option>
                <option value="traj_params">traj_params</option>
                <option value="genion_params">genion_params</option>
            </select>
            <button type="submit" class="bg-coolgray-500 hover:bg-coolgray-600 text-white px-2 py-1 rounded-md">Delete</button>
        </form>
    </div>

</body>
</html>